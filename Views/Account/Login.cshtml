@model Crook.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
</hgroup>

<div class="col-sm-6" >
                                
                             
<div>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    if(IsPost){
    <div class="alert alert-danger ">
         @Html.ValidationSummary(true)
    
    </div>
    }
    <ul class="list-group-i">
         <li class="list-group-item">
         <h2 class="form-signin-heading">Please sign in</h2>
         </li>
        <li class="list-group-item">
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus name="UserName">
        </li>
        <li class="list-group-item">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required name="Password">
        </li>
            <li class="list-group-item">
            <div class="checkbo">
          <label>
            <input type="checkbox"  name="Rememberme" > Remember me
          </label>
        </div>
                </li>
        <li class="list-group-item">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>
    </li>
    </ul>
}
</div>
    </div>
   <div class=" col-sm-6  blog-main renderer " style="">

<section class="social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
                             </div>


   